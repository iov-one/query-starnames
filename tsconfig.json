{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "target": "ES2017",
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}